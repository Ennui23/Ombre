<?xml version="1.0" encoding="utf-8"?>
<!-- button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00FF00" /> <!-- Green color for selected background -->
                    <stroke android:color="#00FF00" android:width="1dp" /> <!-- Green stroke -->
                    <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>
            <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White color for selected background -->
                    <stroke android:color="#000000" android:width="1dp" /> <!-- Black stroke -->
                    <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White color for default background -->
                    <stroke android:color="#000000" android:width="1dp" /> <!-- Black stroke -->
                    <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
